@model IndexModel

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


@{ ViewData["Title"] = "Perfil de Usuário";
    ViewData["PageName"] = "manager_index";
    ViewData["Category1"] = "Identity";
    //ViewData["Heading"] = "<i class='subheader-icon fal fa-table'></i> Listagem de Pacientes: <span class='fw-300'>Export</span> <sup class='badge badge-primary fw-500'>ADDON</sup>";

    ViewData["Heading"] = "<i class='subheader-icon fal fa-table'></i> Gerenciamento de Usuário Logado";

    ViewData["PageDescription"] = "Gerencie suas configurações de conta"; }


@*<h4>@ViewData["Title"]</h4>*@
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-5 col-xl-5 col-sm-12">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <label>Imagem do Perfil:</label><br />

            <div class="input-group cooperchipCicleProfileIndex">

                @if (!string.IsNullOrEmpty(Model.Input.ImgProfilePath))
                {
                    <img src="/uploads/@Model.Input.ImgProfilePath" alt="Imagem de Perfil" class="cooperchipCicleProfileIndex" />
                }
                else
                {
                    <img src="/img/avatars/foto-padrao.jpg" alt="Imagem de Perfil" class="cooperchipCicleProfileIndex" />
                }
            </div>

            <br />

            <div class="form-group">
                <input type="file" name="file" class="form-control-file btn btn-outline-success" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-info">Salvar</button>
            </div>

            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Input.Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Input.Email" class="form-control" />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Enviar Email de Verificação</button>
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Apelido"></label>
                <input asp-for="Input.Apelido" class="form-control" />
                <span asp-validation-for="Input.Apelido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.NomeCompleto"></label>
                <input asp-for="Input.NomeCompleto" class="form-control" />
                <span asp-validation-for="Input.NomeCompleto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.DataNascimento"></label>
                <input asp-for="Input.DataNascimento" class="form-control" />
                <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model Cooperchip.ITDeveloper.Domain.Entities.ChamadaMedica


@{
    ViewBag.Title = "Atender Chamada Médica";
}
@{ Layout = null; }

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">MedicalManagement-Sys - @ViewBag.Title</h4>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">

                <div class="alert alert-danger">

                    <h4>Confirma o atendimento da Chamada?</h4>
                    <hr />
                    <h4><strong>Mensagem:&nbsp; @Model.Mensagem</strong></h4>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Atender" class="btn btn-danger" />
                        </div>
                    }
                </div>
                <hr />
                <dl class="dl-horizontal">

                    <dt>@Html.DisplayNameFor(model => model.DataChamada)</dt>
                    <dd>@Html.DisplayFor(model => model.DataChamada)</dd>
                    <dt>@Html.DisplayNameFor(model => model.Medico)</dt>
                    <dd>@Html.DisplayFor(model => model.Medico)</dd>
                    <dt>@Html.DisplayNameFor(model => model.Leito)</dt>
                    <dd>@Html.DisplayFor(model => model.Leito)</dd>
                </dl>

            </div>
        </div>
        <div class="modal-footer">
            <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
        </div>

    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

@model Cooperchip.ITDeveloper.Application.ViewModels.TagsViewModel

@{
    ViewData["Title"] = "Adicionar Tags";
}

@*<vc:cabecalho titulo="Cooperchip-Sys / Módulo Tags"
              subtitulo="Administração de Tags"></vc:cabecalho>*@

<div class="panel panel-default panel-controls">
    <div class="panel panel-heading">
        <h3>Adicionar Tag</h3>
    </div>

    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-8 col-lg-8 col-sm-12">
                <form asp-controller="Tags" asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <partial name="Partial/_create_edit" />

                    <div class="form-group">
                        <input type="submit" value="Adicionar" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-default">Listagem</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}

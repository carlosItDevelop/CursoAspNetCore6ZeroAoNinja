
@model Cooperchip.ITDeveloper.Application.ViewModels.TagsViewModel

@{
    ViewData["Title"] = "Editando Tags...";
}

@*<vc:cabecalho titulo="Cooperchip-Sys / Módulo Tags"
              subtitulo="Administração de Tags"></vc:cabecalho>*@

<div class="panel panel-default panel-controls">
    <div class="panel panel-heading">
        <h3>Editando Tag</h3>
    </div>

    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-8 col-lg-8 col-sm-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <partial name="Partial/_create_edit" />

                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                        <a class="btn btn-default" asp-action="Index">Listagem</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}


@model Cooperchip.ITDeveloper.Application.ViewModels.Farmacia.FornecedorViewModel

@{
    ViewData["Title"] = "Detalhes";
}


<vc:cabecalho titulo="Medical Management-Sys / Módulo Farmácia" subtitulo="Módulo de Administração Fornecedores"></vc:cabecalho>

<div class="row">
    <div class="panel panel-heading">
        <h3>Detalhes de Fornecedores</h3>
    </div>

    <div class="panel panel-body">

        <div>
            <h4>Informação somente leitura</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Documento)
                </dt>
                <dd class="col-sm-10">
                    @this.FormataDocumento(Model.TipoFornecedor, Model.Documento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Ativo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ativo)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-dark" supress-by-claim-name="Fornecedor" supress-by-claim-value="Editar" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            <a class="btn btn-info" asp-action="Index">Voltar</a>
        </div>


        <partial name="_DetalhesEndereco" />
    </div>
</div>


@section Scripts {


}

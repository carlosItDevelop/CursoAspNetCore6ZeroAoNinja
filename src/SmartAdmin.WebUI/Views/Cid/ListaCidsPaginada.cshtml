@using Cooperchip.ITDeveloper.Domain.Entities;
@model PagedResult<Cooperchip.ITDeveloper.Domain.Entities.Cid>

@{
    ViewData["Title"] = "Medical Management Sys - Lista de CID";
}


@{
    ViewData["Title"] = "Listagem de Cid Paginada";
    ViewData["PageName"] = "lista-cids-paginada";
    ViewData["Category1"] = "Cid";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-table'></i> Listagem de Cid Paginada";
    ViewData["PageDescription"] = "Exporte os dados da lista.";
}

@section HeadBlock {
<link rel="stylesheet" media="screen, print" href="~/css/datagrid/datatables/datatables.bundle.css">
<link rel="stylesheet" media="screen, print" href="~/css/fa-solid.css">
}

<div class="row" style="margin-top: 12px;">

    <div class="col-lg-12">
        <p>
            <button class="btn btn-default create" data-toggle="tooltip" data-placement="bottom" title="Adicionar uma nova CID" data-original-title="Adicionar uma nova CID">  <i class="glyphicon glyphicon-plus-sign"></i>  </button>
            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-default" })
        </p>

        <div class="animated fadeInRightBig">
            <div class="panel panel-primary toggle">
                <div class="panel-heading">
                    <h4 class="panel-title"><i class="fa fa-magic"></i> @ViewData["Title"]</h4>
                </div>

                <div class="row col-12">
                    <div class="form-group" style="margin: 15px 5px 2px 35px;">
                        <div class="pull-left">
                            Listando página @Model.PageIndex de um total de @Model.TotalPages páginas em @Model.TotalResults Registros.
                        </div>
                    </div>
                </div>

                <div class="panel-body">

                    <form method="get" asp-controller="Cid" asp-action="ListaCidsPaginada">
                        <div class="form-action no-color">
                            <p>
                                <input type="text" name="q" id="q" value="@ViewData["pesquisa"]" placeholder="Buscar por...">
                                <input type="submit" value="Buscar" class="btn btn-default"> | <a asp-controller="Cid" asp-action="ListaCidsPaginada" class="btn btn-default">Retornar à Lista Completa</a>
                            </p>
                        </div>
                    </form>


                    <table id="myTableCid" class="table table-striped table-bordered" style="width:100%" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    ID Interno
                                </th>
                                <th>
                                    Código
                                </th>
                                <th>
                                    Diagnóstico
                                </th>
                                <th class="text-center">Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.List.OrderBy(p => p.Codigo))
                            {
                                <tr>
                                    <td>
                                        @item.CidInternalId
                                    </td>
                                    <td>
                                        @item.Codigo
                                    </td>
                                    <td>
                                        @item.Diagnostico
                                    </td>
                                    <td class="text-center">

                                        <button class="btn btn-default details"
                                            data-id="@item.Id" data-toggle="tooltip" data-placement="bottom"
                                            title="Detalhes da Cid" data-original-title="Detalhes da Cid">
                                            <i class="glyphicon glyphicon-file"></i>
                                        </button>

                                        <button class="btn btn-danger delete"
                                            data-id="@item.Id" data-toggle="tooltip" data-placement="bottom"
                                            title="Excluir CID" data-original-title="Excluir CID">
                                            <i class="glyphicon glyphicon-trash"></i>
                                        </button>

                                        <button class="btn btn-primary edit"
                                            data-id="@item.Id" data-toggle="tooltip" data-placement="bottom"
                                            title="Editar CID" data-original-title="Editar CID">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </button>

                                    </td>
                                </tr>
                            }
                        </tbody>

                        <tfoot>
                            <tr>
                                <th>ID Interno</th>
                                <th>Código</th>
                                <th>Diagnóstico</th>
                                <th class="text-center">Ação</th>
                            </tr>
                        </tfoot>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<vc:paginacao modelo-paginado="@Model"></vc:paginacao>


<partial name="PartialViews/_HistoricoPaciente" />
<partial name="PartialViews/_Prontuario" />

@section ScriptsBlock {


<partial name="PartialViews/_ScriptDataTables" />
    @* .dt-basic-srmartadmin *@

}
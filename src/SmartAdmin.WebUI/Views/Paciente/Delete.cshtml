@model Cooperchip.ITDeveloper.Application.ViewModels.PacienteViewModel
@*<vc:cabecalho titulo="Medical Management-Sys / Módulo Pacientes" subtitulo="Módulo de Administração de Pacientes">

    </vc:cabecalho>*@


@{
    ViewData["Title"] = "Excluir Paciente";
    ViewData["PageName"] = "paciente_delete";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-plus-circle'></i>  Paciente";
    ViewData["PageDescription"] = "Exclusão de Paciente";
    ViewData["Category1"] = "Paciente";
}



@section HeadBlock {
    <link rel="stylesheet" media="screen, print" href="~/css/page-invoice.css">
}
<div class="container">
    <div data-size="A4">
        <div class="row">
            <div class="col-sm-12">
                <h5 class="fw-300 display-4 fw-500 color-primary-600 keep-print-font pt-4 l-h-n m-0">
                    Confirmar a exclusão de @Model.Nome ?
                </h5>
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 d-flex">
                <div class="table-responsive">
                    <table class="table table-clean table-sm align-self-end">

                        <partial name="_delete_details" />

                    </table>
                </div>
            </div>

        </div>



        <div class="row">
            <div class="col-sm-12">

                <form asp-controller="Paciente" asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-outline-danger">Excluir Paciente</button>
                    <a class="btn btn-outline-info" asp-controller="Paciente" asp-action="Index">Listagem</a>
                </form>


            </div>
        </div>
    </div>
</div>
@section ScriptsBlock {
}

